<div class= "container">

	<div class="container circle">
		<h1 class="essentialH1">Essential</h1>
	</div>

  <div class= "col-xs-4 col-xs-offset-2 col-md-4 col-md-offset-2">
    <div class="hidden">
      <%= form_tag '/shelter', method: :get do |f| %>
          <%= text_field_tag 'long'%>
          <%= text_field_tag 'lat'%>
          </div> <!-- 		closes hidden form div -->
          <figure>
            <%= image_submit_tag "Home.png" %>
            <figcaption>&nbsp;&nbsp;&nbsp; Find shelter </figcaption>
          </figure>
      <% end %>
      </div> <!-- 	closes shelter icon div -->

  <div class= "col-xs-4 col-md-4 col-md-offset-2">
    <div class="hidden">
      <%= form_tag '/meal', method: :get do |f| %>
          <%= text_field_tag 'long2'%>
          <%= text_field_tag 'lat2'%>
          </div> <!-- 		closes hidden form div -->
          <figure>
            <%= image_submit_tag "Coffee.png" %>
            <figcaption>&nbsp;&nbsp;&nbsp; Find meals </figcaption>
          </figure>
      <% end %>
      </div> <!-- 	closes meals icon div -->
	</div> <!-- closes container div for image icons and logo -->

<div class="container" id="indexSearchDiv">
	<%= bootstrap_form_tag url: 'search', method: :get do |f| %>
		<%= f.text_field :search_term, label: 'Search', hide_label: true, placeholder: 'Search for a shelter or meals' %>
		<%= f.primary 'Search' %>
	<% end %>
</div>

<div class="col-md-10 col-md-offset-1">
	<p id="indexP"> Essential's aim is to find food and shelter near you. Create an account to take advantage of all of our features, such as saving locations in a list and leaving comments on locations to help out your community.</p>
</div>
